#include <iostream>
#include<locale.h> //türkçe karakter için
using namespace std;

void mesajYaz(){
for(int i=1; i<=61; i++)
  cout<<"Selam"<<i<<" Ben Ömürcan"<<endl;
}

void mesajYaz(int param){
	if(param>0){
	 try{
  		for(int i=1; i<=param; i++)
  			cout<<"Selam"<<i<<" Ben Ömürcan"<<endl;
  		}
  catch (int e){
    cout << "Hata Meydana Geldi,hata kodu " << e << '\n';
               }
             }
else{
	cout<<"0(Sıfır)'dan büyük rakam girmeliydin !";
    }
}

void mesajYaz(string params,int param){
int sayac=1; 
do{
	cout<<sayac<<"--"<<params<<endl;
	sayac++;
}while(sayac<=param);
}

void mesajYazWhile(string params,int param){
int sayac=1; 	
while(sayac<=param){
	cout<<sayac<<"--"<<params<<endl;
	sayac++;
}
}

int main(){
setlocale(LC_ALL, "Turkish"); //türkçe karakter için
mesajYaz();

int p;
cout<<"Kaç defa yazsın ?"<<endl;
cin>>p;
mesajYaz(p);
mesajYaz("Merhaba,Ben Ömürcan",61);
mesajYazWhile("Merhaba,Ben Ömürcan",61);
return 0;
}
